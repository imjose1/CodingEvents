@using CodingEvents.ViewModels
@model AddEventViewModel

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
       <label asp-for="Name">Name</label>
       <input asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContacEmail" />
        <span asp-validation-for="ContacEmail" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Event" />
</form>

